{
    "collection": "ChatMessage",
    "database": "RChat",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "authorID": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "shared",
            "apply_when": {
                "subscribers": "%%user.id"
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
